{
  "name": "hexa-framework",
  "version": "1.0.0",
  "description": "Hexagonal Architecture TypeScript Framework for Building Backend APIs - by lutfian.rhdn",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*",
    "create-hexa-app"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "clean": "npm run clean --workspaces",
    "lint": "eslint . --ext .ts,.js",
    "format": "prettier --write \"**/*.{ts,js,json,md}\""
  },
  "keywords": [
    "hexagonal-architecture",
    "typescript",
    "framework",
    "api",
    "backend",
    "rest-api",
    "express",
    "prisma",
    "clean-architecture",
    "ports-adapters"
  ],
  "author": "lutfian.rhdn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lutfian-rhdn/hexa-framework.git"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.0"
  }
}
